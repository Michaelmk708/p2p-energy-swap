# Copy this file to .env and fill in real values. Do NOT commit .env.

# Optional: ngrok auth token (enables public callback URL for MPesa webhooks)
NGROK_AUTHTOKEN=

# Daraja (MPesa) credentials
MPESA_ENVIRONMENT=sandbox  # or production
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_BUSINESS_SHORTCODE=
MPESA_PASSKEY=

# Django allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Optional: a fixed callback URL (otherwise run_all.sh will set it from ngrok)
# PAYMENT_CALLBACK_URL=https://<your-ngrok-id>.ngrok.app/api/mpesa/callback/
