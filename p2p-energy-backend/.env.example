#############################################
# Backend environment example for IoT Central
#############################################

# Django (match settings.py env names)
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=dev-secret-key-change-me
DJANGO_ALLOWED_HOSTS=*

# CORS (frontend dev URL)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# IoT Central ingest security
# Must match the X-Shared-Secret header you configure in IoT Central Data Export webhook
IOTCENTRAL_SHARED_SECRET=change-this-32char-secret

# Auto-mint configuration
AUTO_MINT_ENABLED=true
AUTO_MINT_QUANTUM_KWH=1
# Optional component to read cumulative export totals
AUTO_MINT_EXPORT_COMPONENT=grid_export

# Component classifier hints (ensure our snake_case names classify correctly)
PV_COMPONENT_HINTS=pv_array,pv-array,pv
LOAD_COMPONENT_HINTS=house_load,house-load,load

# Optional SPL gateway (leave off for PoC minter)
USE_SPL_GATEWAY=false
SPL_GATEWAY_URL=http://localhost:8080
